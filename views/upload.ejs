<%- include ("includes/header") %>
<link href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.css">
<script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.js"></script>

<script type="text/javascript">
   function fileSelected() {
      var fileName = document.getElementById("file").files[0].n
      ame;
      document.getElementById("filename").innerHTML = fileName;
   }
</script>

<div class="container-fluid pt-5 pb-5" id="video-upload-container">
   <div class="row">
      <div class="col-lg-12">
         <div class="main-title">
            <h6>Thêm thông báo</h6>
         </div>
      </div>
   </div>
      <div class="col-md-12">
         <form method="POST" action="/upload-video" enctype="multipart/form-data">

            <div class="form-group">
               <label>Tiêu đề</label>
               <input type="text" name="title" class="form-control" placeholder= "Nhập tiêu đề..." required>
            </div>

            <div class="form-group">
               <label>Nội dung</label>
               <textarea type="text" name="description" rows="10"   placeholder= "Nhập nội dung..." class="form-control"></textarea>
            </div>


            <div class="row">
               <div class="form-group col-sm-12">
               <label>Điền link Youtube</label>
               <input class="form-control" placeholder= "Nhúng link Youtube..." type="text" name="video" required>
               </div>
            </div>

            <div class="row">
               <div class="form-group col-sm-12 ">
                  <label>Chọn hình ảnh</label>
                  <input class="btn btn-outline-primary btn-block btn-lg text-center" type="file" name="thumbnail" accept="image/*" required></input>
               </div>
            </div>
            

            <div class="row">
               <div class="col-sm-12 ">
                  <label class="control-label">Role:</label>
                  <select class="form-control"  id="choices-multiple-remove-button" multiple name="role">
                     <% role.forEach(function (role) { %>
                     <option value="<%= role %>" name="tags" selected ><%= role %></option>
                     <% }) %>
                   </select>
               </div>
            </div>

            <br>

            <div class="row">

               <div class="col-sm-12 text-right">
                  <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Xác nhận</button>
               </div>
            </div>
         </form>
      </div>
   </div>
</div>
<!-- /.container-fluid -->


